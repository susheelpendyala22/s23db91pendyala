extends layout 
block content
 h1= title
 p Welcome to the #{title}
 if errorMessage
  p=errorMessage
 else
  p Query Parameters:
   | Rows: #{query.rows}, Cols: #{query.cols}
  - let rows = Number(query.rows);
  - let cols = Number(query.cols);
  // Iterate over rows and columns
  table#outer
   - for (let i = 0; i < rows; i++)
    tr#middle
     - for (let j = 0; j < cols; j++)
      td= computeCellValue(i, j)
 script.
  function computeCellValue(row, col) {
   if (row === col) {
    return 1;
   } else if (row === col + 1){
    return 2;
   } else if (row === col - 1){
    return row;
   } else {
    return 0;
   }
  }